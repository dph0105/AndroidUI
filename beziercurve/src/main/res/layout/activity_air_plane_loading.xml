<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".bezieranim.airplaneloading.AirPlaneLoadingActivity">

    <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="开始"/>

    <Button
            android:id="@+id/btn_stop"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="停止"/>

    <com.penn.beziercurve.bezieranim.airplaneloading.AirPlaneLoadingView
            android:id="@+id/plane"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <com.penn.beziercurve.bezieranim.airplaneloading.LineLoadingView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <com.penn.beziercurve.bezieranim.wave.WaveView
            android:id="@+id/wave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

</LinearLayout>